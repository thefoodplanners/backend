# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Main endpoints
GET     /allMeals                   controllers.api.RecipeController.getAllMealSlots(weekDate: String)
POST    /addMealSlot                controllers.api.RecipeController.addMealSlot
GET     /recommendMeals             controllers.api.RecipeController.getRecommendations
POST    /login                      controllers.LoginController.processLogin
GET     /logout                     controllers.LoginController.logout
GET     /list-of-calories           controllers.api.CalorieController.getTotalCalories(calories: List[Int])
GET     /recipe                     controllers.api.RecipeController.getRecipeFromId(userId: Int)
GET     /recipes                    controllers.api.RecipeController.getAllRecipes
GET     /test                       controllers.LoginController.test
GET     /testImage                  controllers.api.RecipeController.testImage

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(file)
