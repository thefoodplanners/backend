# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Calendar endpoints
GET     /allMeals                   controllers.api.CalendarController.getAllMealSlots(weekDate: String)
POST    /updateMealSlot             controllers.api.CalendarController.updateMealSlot()
POST    /addMealSlot                controllers.api.CalendarController.addMealSlot()
DELETE  /deleteMealSlot             controllers.api.CalendarController.deleteMealSlot()
GET     /recommendMeals             controllers.api.CalendarController.getRecommendations

# Login endpoints
POST    /login                      controllers.api.LoginController.processLogin
GET     /logout                     controllers.api.LoginController.logout
POST    /register                   controllers.api.LoginController.register

# Recipe endpoints
GET     /recipe                     controllers.api.CalendarController.getRecipeFromId(userId: Int)
GET     /recipes                    controllers.api.CalendarController.getAllRecipes

# Dev endpoints
GET     /test                       controllers.api.LoginController.test
GET     /testImage                  controllers.api.CalendarController.testImage

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(file)
